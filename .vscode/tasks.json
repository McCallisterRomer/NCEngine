{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "WinBuild",
            "command": "C:/MinGW/mingw64/bin/g++.exe",
            "args": [
                "-Wall",
                "-g",
                "-o",
                "main",
                "Win32Platform/Win32Platform.cpp",
                "NCE/Common/Common.cpp",
                "NCE/Engine/NCEMain.cpp",
                "NCE/Graphics/Renderer.cpp",
                "NCE/Time/Time.cpp",
                "NCE/LevelManagement/LevelManager.cpp",
                "NCE/Input/Input.cpp",
                "NCE/Common/Vector.cpp",
                "NCE/Components/Transform.cpp",
                "NCE/Components/Collider.cpp",
                "Project/Components/Character.cpp",
                "Project/Components/Character2.cpp",
                "Project/Components/ThingSpawner.cpp",
                "NCE/Containers/QuadTree.cpp",
                "-l",
                "Gdi32"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "g++.exe build active file",
            "command": "C:/MinGW/mingw64/bin/g++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:/MinGW/mingw64/bin"
            }
        }
    ]
}