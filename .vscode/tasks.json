{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "WinBuild",
            "command": "C:/MinGW/mingw64/bin/g++.exe",
            "args": [
                "-Wall",
                //"-pg",
                //"-g",
                //"-O2",
                "-std=c++17",
                "-o",
                "main",

                "NCE/main.cpp",

                "NCE/source/CollisionSystem.cpp",
                "NCE/source/Engine.cpp",
                "NCE/source/Entity.cpp",
                "NCE/source/Input.cpp",
                "NCE/source/NCE.cpp",
                "NCE/source/ProjectSettings.cpp",
                "NCE/source/RenderingSystem.cpp",
                "NCE/source/SceneManager.cpp",
                "NCE/source/Time.cpp",
                "NCE/source/TransformSystem.cpp",
                "NCE/source/Vector.cpp",
                "NCE/source/Window.cpp",
                
                "graphics/internal/Bindable.cpp",
                "graphics/internal/Drawable.cpp",
                "graphics/internal/Graphics.cpp",
                "graphics/internal/IndexBuffer.cpp",
                "graphics/internal/InputLayout.cpp",
                "graphics/internal/PixelShader.cpp",
                "graphics/internal/Topology.cpp",
                "graphics/internal/TransformCbuf.cpp",
                "graphics/internal/VertexBuffer.cpp",
                "graphics/internal/VertexShader.cpp",

                "graphics/primitive/Box.cpp",
                //"graphics/primitive/Cube.cpp",

                "project/Components/Head.cpp",
                "project/Components/Tail.cpp",
                "project/Components/Point.cpp",
                "project/Components/PointSpawner.cpp",
                
                "project/Scenes/InitialScene.cpp",

                "-l",
                "Gdi32",
                "-l",
                "D3D11",
                "-l",
                "D3dcompiler_47"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "g++.exe build active file",
            "command": "C:/MinGW/mingw64/bin/g++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:/MinGW/mingw64/bin"
            }
        }
    ]
}