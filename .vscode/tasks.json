{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "WinBuild",
            "command": "C:/MinGW/mingw64/bin/g++.exe",
            "args": [
                "-Wall",
                "-g",
                "-o",
                "main",
                "NCE/main.cpp",
                "NCE/Source/CollisionSystem.cpp",
                "NCE/Source/Entity.cpp",
                "NCE/Source/Input.cpp",
                "NCE/Source/NCE.cpp",
                "NCE/Source/RenderingSystem.cpp",
                "NCE/Source/SceneManager.cpp",
                "NCE/Source/Time.cpp",
                "NCE/Source/TransformManager.cpp",
                "NCE/Source/Vector.cpp",
                "Project/Components/Character.cpp",
                "Project/Components/Character2.cpp",
                "Project/Components/PointSpawner.cpp",
                "-l",
                "Gdi32"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "g++.exe build active file",
            "command": "C:/MinGW/mingw64/bin/g++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:/MinGW/mingw64/bin"
            }
        }
    ]
}